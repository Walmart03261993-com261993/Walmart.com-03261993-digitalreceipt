        <div class="receipt-item">
            <label for="totalAmount">Total Amount:</label>
            <span id="totalAmount">$50.00</span>
        </div>
        <button onclick="editReceipt()">Edit Receipt</button>
    </div>

    <script>
        function editReceipt() {
            // Enable editing of fields
            document.getElementById('receiptNumber').contentEditable = true;
            document.getElementById('date').contentEditable = true;
            document.getElementById('customerName').contentEditable = true;
            document.getElementById('totalAmount').contentEditable = true;
        }
    </script>

